<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>Pokémon Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/pokestyle.css" />
    <link
      rel="icon"
      type="image/x-icon"
      href="https://upload.wikimedia.org/wikipedia/commons/5/53/Pok%C3%A9_Ball_icon.svg"
    />
  </head>

  <body
    class="bg-gray-600 border-8 border-red-600 shadow-xl w-full h-screen flex justify-center items-center p-6"
  >
    <!-- Main Card Container -->
    <div
      class="bg-gray-200 p-6 rounded-2xl w-full h-full max-screen grid grid-cols-1 md:grid-cols-3 gap-6"
    >
      <!-- Left Column: Pokémon Details -->
      <div
        class="flex flex-col justify-center items-center text-center bg-white p-6 rounded-xl shadow-md border-2 border-gray-800 h-full"
      >
        <img
          id="pokemonImage"
          class="w-70 h-70 object-contain"
          src=""
          alt="Pokemon Image"
        />
        <h1 id="pokemonName" class="font-bold text-2xl mt-3"></h1>
        <p id="pokedexNumber" class="text-black text-lg"></p>

        <!-- Type Badges -->
        <div id="typeContainer" class="flex gap-3 mt-3"></div>

        <!-- Additional Info -->
        <p id="abilities" class="mt-3 text-gray-600 text-sm"></p>
        <p id="generation" class="text-gray-600 text-sm"></p>
        <p id="weight" class="text-gray-600 text-sm"></p>
        <p id="height" class="text-gray-600 text-sm"></p>
      </div>

      <!-- Middle Column: Type Matchups -->
      <div class="flex flex-col gap-6">
        <!-- Defensive Matchups -->
        <div
          class="border-2 border-gray-800 shadow-md p-4 rounded-xl bg-white h-full flex flex-col"
        >
          <h2 class="font-bold text-lg text-center mb-3">
            Defensive Type Match Ups
          </h2>

          <div
            class="bg-gray-100 p-3 rounded-lg flex flex-col justify-center items-center h-full"
          >
            <div
              id="weaknessContainer"
              class="flex flex-col items-center gap-4 w-full"
            ></div>
          </div>
        </div>

        <!-- STAB Matchups -->
        <div class="border-2 border-gray-800 shadow-md p-4 rounded-xl bg-white">
          <h2 class="font-bold text-lg text-center mb-3">
            STAB Type Match Ups
          </h2>

          <!-- Inner Styled Box -->
          <div class="bg-gray-100 p-3 rounded-lg">
            <div
              id="stabContainer"
              class="flex flex-col gap-2 text-center"
            ></div>
          </div>
        </div>

        <!-- Buttons -->
        <div class="flex justify-center gap-6 mt-6">
          <a
            class="bg-red-500 hover:bg-red-600 text-white text-center px-6 py-3 rounded-lg font-semibold transition"
            href="/poke/dex"
            >Return to Pokédex</a
          >
          <a
            class="bg-red-500 hover:bg-red-600 text-white text-center px-6 py-3 rounded-lg font-semibold transition"
            href="/team/"
            >Add Pokémon to Team</a
          >
        </div>
      </div>

      <!-- Right Column: Stats & Move Pool -->
      <div class="flex flex-col gap-6">
        <div
          class="bg-gray-200 p-5 rounded-xl shadow-md border-2 border-gray-800 flex-grow"
        >
          <h2 class="font-bold text-lg text-center mb-2">Base Stats</h2>
          <div id="stats"></div>
        </div>
        <div
          class="bg-white p-5 rounded-xl shadow-md border-2 border-gray-800 flex-grow"
        >
          <h2 class="font-bold text-lg text-center mb-2">Move Pool</h2>
          <div class="overflow-y-auto max-h-60">
            <table class="w-full text-left border-collapse">
              <thead class="sticky top-0 bg-white">
                <tr>
                  <th
                    class="border px-4 py-2 text-sm text-center font-semibold"
                  >
                    Move
                  </th>
                  <th
                    class="border px-4 py-2 text-sm text-center font-semibold"
                  >
                    Learned By
                  </th>
                </tr>
              </thead>
              <tbody id="moveTableBody"></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script src="/scripts/styling.js"></script>
  </body>
</html>
