<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/pokestyle.css" />
    <link href="https://fonts.googleapis.com/css2?family=Kode+Mono:wght@400;700&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Login</title>
    <link rel="icon" type="image/x-icon" href="https://upload.wikimedia.org/wikipedia/commons/5/53/Pok%C3%A9_Ball_icon.svg" />
</head>

<body class="bg-gray-800 text-white font-sans min-h-screen flex items-center justify-center">
    <main class="bg-gray-600  border-8 border-red-600 shadow-xl w-full h-screen flex flex-col justify-center items-center p-6">

        <!-- Login Title -->
        <div class="flex justify-center">
            <img src="/images/Login-1-28-2025.png" alt="Login" class="w-[300px] md:w-[400px]">
        </div>

        <!-- Content Wrapper -->
        <div class="flex flex-col md:flex-row items-center justify-between">

            <!-- Character Image -->
            <div class="mb-10 w-full md:w-1/2 flex justify-center">
                <img src="/images/stevenmetagrossgif.gif" alt="Steven guy" class="h-70" />
            </div>

            <!-- Login Form -->
            <form class="w-full md:w-1/2 space-y-4 mt-8 md:mt-0" action="/auth/login" method="POST">

                <!-- Username Input -->
                <input
                    type="text"
                    id="username"
                    name="username"
                    placeholder="User Name"
                    class="w-full px-4 py-2 text-black rounded-md bg-gray-200 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    required
                />
                <!-- Username Error Message -->
                <% if (errorMessage && errorType === 'username') { %>
                    <p class="text-red-500 text-sm mt-1"><%= errorMessage %></p>
                <% } %>

                <!-- Password Input -->
                <input
                    type="password"
                    id="password"
                    name="password"
                    placeholder="Password"
                    class="w-full px-4 py-2 text-black rounded-md bg-gray-200 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    required
                />
                <!-- Password Error Message -->
                <% if (errorMessage && errorType === 'password') { %>
                    <p class="text-red-500 text-sm mt-1"><%= errorMessage %></p>
                <% } %>

                <button
                    type="submit"
                    class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 rounded-lg transition"
                >
                    Login
                </button>
                <p class="text-gray-300 mt-2 text-sm"  style="font-family: kode-mono;">
                    Donâ€™t have an account? <a href="/auth/register" class="text-blue-400 underline">Sign-Up</a>
                  </p>
            </form>
            

        </div>
        

    </main>

    <!-- Prevent Form Resubmission on Refresh -->
    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>

</body>
</html>
