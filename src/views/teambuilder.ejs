    <script>
      // Select buttons & modal
      const deleteBtn = document.getElementById("deleteBtn");
      const deleteModal = document.getElementById("deleteModal");
      const confirmDelete = document.getElementById("confirmDelete");
      const cancelDelete = document.getElementById("cancelDelete");
      const body = document.body; // Target the body for freezing

      // Show modal & freeze background
      deleteBtn.addEventListener("click", () => {
        deleteModal.classList.remove("hidden");
        body.classList.add("freeze-scroll"); // Add class to freeze animations
      });

      // Show the modal when "Delete Team" is clicked
      deleteBtn.addEventListener("click", () => {
        deleteModal.classList.remove("hidden");
      });
      
      // Hide modal & resume animations
      cancelDelete.addEventListener("click", () => {
        deleteModal.classList.add("hidden");
        body.classList.remove("freeze-scroll"); // Remove freeze class
      });

      // Perform delete action when "Yes" is clicked
      confirmDelete.addEventListener("click", () => {
        deleteModal.classList.add("hidden");
        body.classList.remove("freeze-scroll"); // Resume animations
