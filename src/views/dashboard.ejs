<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/x-icon"
      href="https://upload.wikimedia.org/wikipedia/commons/5/53/Pok%C3%A9_Ball_icon.svg"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Team Builder</title>
  </head>
  <body
    class="bg-gray-600 border-8 border-red-600 w-full h-screen flex flex-col justify-center items-center p-6"
  >
    <!-- Outer Container -->
    <div class="w-[90%] max-w-5xl p-6">
      <div class="grid grid-cols-4 gap-4">
        <!-- User Info Panel -->
        <div
          class="bg-gray-300 p-4 rounded-md col-span-1 border-2 border-black flex flex-col space-y-4"
        >
          <!-- User Info Box -->
          <div class="bg-gray-200 p-3 rounded-md border-2 border-black">
            <h2 class="text-black font-bold text-lg text-center justify-between">
              <a href="/dash/user">User Info <span class="gear">⚙️</span></a>
            </h2>
          </div>

          <!-- Badges Box -->
           <!--class="bg-gray-200 p-3 rounded-md border-2 border-black"-->
          <div >
            <h3 class="text-black font-bold text-center">Badges</h3>
            <div class="grid grid-cols-2 gap-2 mt-2">
              <img src="./images/badges/pngwing.com.png" class="w-16 h-16" />
              <img src="./images/badges/pngwing.com_1.png" class="w-16 h-16" />
              <img src="./images/badges/pngwing.com_2.png" class="w-16 h-16" />
              <img src="./images/badges/pngwing.com_3.png" class="w-16 h-16" />
              <img src="./images/badges/pngwing.com_4.png" class="w-16 h-16" />
              <img src="./images/badges/pngwing.com_5.png" class="w-16 h-16" />
              <img src="./images/badges/pngwing.com_6.png" class="w-16 h-16" />
              <img src="./images/badges/pngwing.com_8.png" class="w-16 h-16" />
            </div>
          </div>
        </div>

        <!-- Team Builder Section -->
        <div
          class="bg-purple-400 p-4 rounded-md col-span-2 border-2 border-black"
        >
          <h2 class="text-black font-bold text-lg text-center"><a href="/dash/teamhome">Team Builder</a></h2>
          <div class="mt-2 flex">
            <input
              type="text"
              class="ml-2 flex-grow p-1 rounded-md"
              placeholder="Search Team"
            />
            <button class="bg-blue-500 text-white px-3 py-1 rounded-md">
              Search
            </button>
          </div>

          <!-- Team Display -->
          <div id="team-list" class="mt-4 space-y-4">
            <div class="flex justify-between p-2 rounded-md">
              <div
                class="w-full bg-gray-400 text-gray-600 font-bold py-2 text-center rounded-md animate-pulse"
              >
                Loading teams...
              </div>
              <button class="bg-blue-500 text-white px-3 py-1 rounded-md">
                View
              </button>
            </div>

            <div class="flex justify-between p-2 rounded-md">
              <div
                class="w-full bg-gray-400 text-gray-600 font-bold py-2 text-center rounded-md animate-pulse"
              >
                Loading teams...
              </div>
              <button class="bg-blue-500 text-white px-3 py-1 rounded-md">
                View
              </button>
            </div>

            <div class="flex justify-between p-2 rounded-md">
              <div
                class="w-full bg-gray-400 text-gray-600 font-bold py-2 text-center rounded-md animate-pulse"
              >
                Loading teams...
              </div>
              <button class="bg-blue-500 text-white px-3 py-1 rounded-md">
                View
              </button>
            </div>

            <div class="flex justify-between p-2 rounded-md">
              <div
                class="w-full bg-gray-400 text-gray-600 font-bold py-2 text-center rounded-md animate-pulse"
              >
                Loading teams...
              </div>
              <button class="bg-blue-500 text-white px-3 py-1 rounded-md gap-3">
                View
              </button>
            </div>

            <div class="flex justify-between p-2 rounded-md">
              <div
                class="w-full bg-gray-400 text-gray-600 font-bold py-2 text-center rounded-md animate-pulse"
              >
                Loading teams...
              </div>
              <button class="bg-blue-500 text-white px-3 py-1 rounded-md">
                View
              </button>
            </div>
          </div>
        </div>

        <!-- Side Buttons -->
        <div class="flex flex-col space-y-6 col-span-1">
          <button
            class="w-full bg-red-500 text-white font-bold py-6 text-2xl rounded-lg border-2 border-black"
          >
            <a href="/poke/dex">Pokedex</a>
          </button>
          <button
            class="w-full bg-purple-600 text-white font-bold py-6 text-2xl rounded-lg border-2 border-black"
          >
            <a href="/dash/help">Help</a>
          </button>
          <button
            class="w-full bg-blue-700 text-white font-bold py-6 text-2xl rounded-lg border-2 border-black"
          >
            <a href="/dash/build">Team Building Help</a>
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
