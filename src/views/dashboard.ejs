<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/x-icon"
      href="https://upload.wikimedia.org/wikipedia/commons/5/53/Pok%C3%A9_Ball_icon.svg"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Team Builder</title>
  </head>
  <!--flex justify-center-->
  <body class="bg-gray-600 border-8 border-red-600 w-full h-dvh p-6">
    
    <!-- Main Grid Container -->
    <div class="grid grid-cols-4 gap-4 w-full h-full">

             <!------------------------ LEFT SIDE ----------------------------->
      
      <!-- Dashboard Container (User Info + Badges) -->
      <div class="bg-gray-300 p-4 rounded-md border-2 border-black flex flex-col space-y-4 h-full">

        <!-- User Info Panel -->
        <div class="bg-gray-200 p-3 rounded-md border-2 border-black shadow-lg hover:scale-105 hover:shadow-xl transition-transform duration-200">
          <h2 class="text-black font-bold text-lg text-center">
            <a href="/dash/user">User Info <span class="gear">⚙️</span></a>
          </h2>
        </div>

        <!-- Badges Box -->
        <div class="bg-gray-200 p-3 rounded-md border-2 border-black flex-grow flex flex-col items-center">
          <h3 class="text-black font-bold text-center">Badges</h3>
          <div class="grid grid-cols-2 gap-20 py-10 mt-4 flex-grow items-center justify-center">
            <img src="./images/badges/pngwing.com.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
            <img src="./images/badges/pngwing.com_1.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
            <img src="./images/badges/pngwing.com_2.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
            <img src="./images/badges/pngwing.com_3.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
            <img src="./images/badges/pngwing.com_4.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
            <img src="./images/badges/pngwing.com_5.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
            <img src="./images/badges/pngwing.com_6.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
            <img src="./images/badges/pngwing.com_8.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
            <img src="./images/badges/pngwing.com_9.png" class="w-16 h-16 hover:scale-105 hover:brightness-110 transition-transform duration-200" />
          </div>
        </div>
      </div>

     <div class="bg-purple-400 p-4 rounded-md border-2 border-black col-span-2 h-full flex flex-col">
        <h2 class="text-black font-bold text-lg text-center hover:scale-105">
          <a href="/team" class= hover:text-white>Team Builder</a>
        </h2>
        <div class="mt-2 flex">
          <input type="text" class="ml-2 flex-grow p-1 rounded-md" placeholder="Search Team" />
          <button class="bg-blue-500 text-white px-3 py-1 rounded-md hover:bg-blue-300">Search</button>
        </div>

        <!-- Team Display -->
        <div id="team-list" class="mt-4 space-y-4 flex-grow flex flex-col justify-between">
          <% if (Array.isArray(teams)) { %>
            <% teams.forEach(function(team) { %>
              <div class="flex justify-between p-2 rounded-md flex-grow">
                <div class="w-full bg-gray-400 text-gray-600 font-bold py-2 text-center rounded-md flex-grow flex items-center justify-center">
                  <a href="/team/builder/<%= team.teamID %>"><%= team.teamname %></a>
                </div>
                <a href="/team/builder/<%= team.teamID %>" class="bg-blue-500 text-white px-3 py-1 rounded-md hover:bg-blue-300 flex items-center justify-center">View</a>
              </div>
            <% }); %>
          <% } else { %>
            <div class="w-full bg-gray-400 text-gray-600 font-bold py-2 text-center rounded-md animate-pulse">
              No teams available.
            </div>
          <% } %>
        </div>
      </div>
      <!-- Side Buttons (Pokedex, Help, Team Building) -->
      <div class="flex flex-col h-full col-span-1 gap-4">
        <a href="/poke/dex" class="flex-grow w-full bg-red-600 text-white text-center font-bold py-6 text-2xl rounded-lg border-2 border-black shadow-lg hover:bg-red-500 hover:border-black flex justify-center items-center hover:scale-105 transition-transform duration-100">
          Pokedex
        </a>
        <a href="/dash/help" class="flex-grow w-full bg-purple-600 text-white font-bold py-6 text-2xl rounded-lg border-2 border-black flex justify-center items-center hover:scale-105 transition-transform duration-100">
          Help
        </a>
        <a href="/dash/build" class="flex-grow w-full bg-blue-700 text-white font-bold py-6 text-2xl rounded-lg border-2 border-black flex justify-center items-center hover:scale-105 transition-transform duration-100">
          Team Building Help
        </a>
      </div>

    </div>

  </body>
</html>
